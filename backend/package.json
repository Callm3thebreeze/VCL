{
  "name": "vocali-backend",
  "version": "1.0.0",
  "description": "Backend for Vocali audio transcription platform",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "nodemon src/app.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:api": "node tests/test-runner.js",
    "test:api:basic": "node tests/test-runner.js endpoints",
    "test:api:complete": "node tests/test-runner.js complete",
    "test:db": "node tests/test-runner.js database",
    "test:app": "node tests/test-runner.js app",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "db:start": "docker-compose up -d mysql",
    "db:stop": "docker-compose down",
    "db:reset": "docker-compose down -v && docker-compose up -d mysql",
    "db:logs": "docker-compose logs -f mysql",
    "setup": "npm install && npm run db:start",
    "update-deps": "npm audit fix && npm outdated",
    "security-check": "npm audit"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.658.1",
    "@aws-sdk/s3-request-presigner": "^3.658.1",
    "@supabase/supabase-js": "^2.53.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.1.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "multer": "^2.0.0-rc.4",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "uuid": "^10.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.10.0",
    "eslint": "^9.10.0",
    "globals": "^15.9.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "supertest": "^7.1.3"
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/app.js",
      "!src/config/**",
      "!src/swagger/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ]
  },
  "keywords": [
    "audio",
    "transcription",
    "api",
    "nodejs",
    "express"
  ],
  "author": "Vocali Team",
  "license": "MIT"
}
