# Variables de entorno para scripts de deploy
# Copia este archivo a .env.deploy y configura tus valores reales
# NO subas .env.deploy al repositorio (está en .gitignore)

# Frontend
export FRONTEND_BUCKET="vocali-frontend-production"
export FRONTEND_BUCKET_DEV="vocali-frontend-develop"

# CloudFront (obtener desde AWS Console)
export CLOUDFRONT_DISTRIBUTION_ID_PROD="EXXXXXXXXXXXXX"  # CloudFront Distribution ID de producción
export CLOUDFRONT_DISTRIBUTION_ID="EXXXXXXXXXXXXX"      # CloudFront Distribution ID de desarrollo

# Backend (obtener desde AWS Console)
export EC2_INSTANCE_ID="i-xxxxxxxxxxxxxxxxx"  # EC2 Instance ID donde corre el backend

# S3 Deployment
export S3_DEPLOYMENT_BUCKET="vocali-deployments-production"
export S3_DEPLOYMENT_BUCKET_DEV="vocali-deployments-develop"

# AWS
export AWS_REGION="eu-north-1"

# Uso:
# 1. Copia este archivo: cp .env.deploy.example .env.deploy
# 2. Edita .env.deploy con tus valores reales
# 3. Carga las variables: source .env.deploy
# 4. Ejecuta el script: ./scripts/deploy-manual.sh
